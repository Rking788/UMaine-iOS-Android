<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/maine_lightblue"><!--"#ff003263"--> <!-- "@drawable/blackbear" -->
	
	<View
		android:id="@+id/bluebar"
		android:layout_below="@+id/umainelogo_iv"
  		android:layout_height="2dp"
  		android:layout_width="fill_parent"
  		android:background="@color/maine_blue"/>
	
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="@color/maine_whiteblue"
		android:layout_below="@+id/bluebar" 
		android:gravity="center">
	<TableLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_gravity="center_vertical|center_horizontal">
        
        <TableRow
        	android:layout_width="wrap_content">
			<Button android:id="@+id/coursesbtn"
				android:background="#00FFFFFF"
				android:padding="10dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:drawableTop="@drawable/notes"
				android:text="Class Schedule"
				android:textColor="#000000"/>
			
			<Button android:id="@+id/parkingbtn"
				android:background="#00FFFFFF"
				android:padding="10dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:drawableTop="@drawable/earth"
				android:text="Map and Parking"
				android:textColor="#000000"/>
			<!-- android:src="@drawable/mapbutton" android:visibility="visible"/> -->
		</TableRow>
			
		<TableRow
			android:layout_width="wrap_content">
			<Button android:id="@+id/sportsbtn"
				android:background="#00FFFFFF"
				android:padding="10dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:drawableTop="@drawable/bear"
				android:text="Go Blue!"
				android:textColor="#000000"/>
			<!-- 	android:src="@drawable/sports_button" android:visibility="visible" -->
				
			<Button android:id="@+id/directorybtn"
				android:background="#00FFFFFF"
				android:padding="10dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:drawableTop="@drawable/directory"
				android:text="Staff Directory"
				android:textColor="#000000"/>
		</TableRow>
		<!-- TODO: Change the image used for the academic calendar button -->
		<TableRow
			android:layout_width="wrap_content"
			android:gravity="center_horizontal">
			<Button android:id="@+id/calendarbtn"
				android:background="#00FFFFFF"
				android:padding="10dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:drawableTop="@drawable/academiccal"
				android:text="Academic Calendar"
				android:textColor="#000000"/>
		    <Button android:id="@+id/newsbtn"
				android:background="#00FFFFFF"
				android:padding="10dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:drawableTop="@drawable/rss"
				android:text="Campus News"
				android:textColor="#000000"/>
			<!-- 	android:src="@drawable/sports_button" android:visibility="visible" -->
		</TableRow>		
		
	    <TableRow
			android:layout_width="wrap_content"
			android:gravity="center_horizontal">
			<Button android:id="@+id/diningbtn"
				android:background="#00FFFFFF"
				android:padding="10dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:drawableTop="@drawable/dining"
				android:text="Dining Menu"
				android:textColor="#000000"/>
		    <Button android:id="@+id/emergencybtn"
				android:background="#00FFFFFF"
				android:padding="10dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:drawableTop="@drawable/emergency"
				android:text="Emergency Contacts"
				android:textColor="#000000"/>
			<!-- 	android:src="@drawable/sports_button" android:visibility="visible" -->
		</TableRow>	
	</TableLayout>
	<TextView android:gravity="bottom|center_horizontal" android:layout_width="match_parent" android:id="@+id/textView1" android:text="Developed by the Department of Electrical and Computer Engineering" android:layout_height="wrap_content"></TextView>
	


</LinearLayout>
</RelativeLayout>